<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InfoActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/bmi_in_adults"
            android:id="@+id/infoBannerImage" android:layout_alignParentEnd="true" android:layout_marginEnd="0dp"
            android:layout_alignParentStart="true" android:layout_marginStart="0dp" android:scaleType="centerInside"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/BMIValueText" android:layout_marginTop="24dp"
            android:layout_below="@+id/infoBannerImage" android:layout_alignParentStart="true"
            android:layout_marginStart="24dp" android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="@dimen/bmi_info_bmi_value_text_size"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/BMIDescText"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp" android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginTop="24dp" android:layout_below="@+id/infoBannerImage"
            android:layout_toEndOf="@+id/BMIValueText" android:layout_marginStart="24dp" android:textSize="@dimen/bmi_about_me_desc_text_size"
    />
</RelativeLayout>